@model INFORNO_EF.Models.Pizze

@{
    ViewBag.Title = "Delete";
}

<div class="m-2 text-center">
    <h2 class="text-danger">Stai eliminando la @Model.Nome</h2>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Foto)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Foto)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Prezzo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Prezzo)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TempoConsegna)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TempoConsegna)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Ingredienti)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Ingredienti)
            </dd>

            <dt class="d-none">
                @Html.DisplayNameFor(model => model.Quantita)
            </dt>

            <dd class="d-none">
                @Html.DisplayFor(model => model.Quantita)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Elimina" class="btn btn-danger fw-bold w-100" /> <hr/>
                @Html.ActionLink("Torna alla lista delle pizze", "Index")
            </div>
        }
    </div>
</div>