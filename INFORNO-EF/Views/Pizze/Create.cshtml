@model INFORNO_EF.Models.Pizze
@{
    ViewBag.Title = "Create";
}

<h2>Crea una nuova pizza</h2>

@using (Html.BeginForm("Create", "Pizze", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-control d-flex flex-column align-items-stretch">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Nome)
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Prezzo, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Prezzo)
            @Html.ValidationMessageFor(model => model.Prezzo, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TempoConsegna, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.TempoConsegna)
            @Html.ValidationMessageFor(model => model.TempoConsegna, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ingredienti, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Ingredienti)
            @Html.ValidationMessageFor(model => model.Ingredienti, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FileFoto, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.FileFoto, new { htmlAttributes = new { @class = "form-control", @type = "file" } })
            @Html.ValidationMessageFor(model => model.FileFoto, "", new { @class = "text-danger" })
        </div>

        <div class="mt-4">
            <input type="submit" value="Salva pizza" class="btn btn-primary" />
        </div>

    </div>
}