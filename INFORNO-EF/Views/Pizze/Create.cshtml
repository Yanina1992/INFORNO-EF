@model INFORNO_EF.Models.Pizze
@{
    ViewBag.Title = "Create";
}

<div class="m-2 d-flex flex-column" style="min-height: 65vh">
    <h2>Aggiungi una nuova pizza</h2>

    @using (Html.BeginForm("Create", "Pizze", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        @*<div class="form-control d-flex flex-column align-items-stretch">*@
        <div class="form-control">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })<br/>
                @Html.EditorFor(model => model.Nome)<br/>
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Prezzo, htmlAttributes: new { @class = "control-label col-md-2" })<br/>
                @Html.EditorFor(model => model.Prezzo)<br/>
                @Html.ValidationMessageFor(model => model.Prezzo, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TempoConsegna, htmlAttributes: new { @class = "control-label col-md-2" })<br/>
                @Html.EditorFor(model => model.TempoConsegna)<br/>
                @Html.ValidationMessageFor(model => model.TempoConsegna, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Ingredienti, htmlAttributes: new { @class = "control-label col-md-2" })<br/>
                @Html.EditorFor(model => model.Ingredienti)<br/>
                @Html.ValidationMessageFor(model => model.Ingredienti, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.FileFoto, htmlAttributes: new { @class = "control-label col-md-2" })<br/>
                @Html.EditorFor(model => model.FileFoto, new { htmlAttributes = new { @class = "form-control", @type = "file" } })<br/>
                @Html.ValidationMessageFor(model => model.FileFoto, "", new { @class = "text-danger" })
            </div>


            <div class="mt-4 align-self-center d-flex justify-content-center">
                <input type="submit" value="Salva pizza" class="btn btn-dark fw-bold w-100" />
            </div>

        </div>
    }
</div>