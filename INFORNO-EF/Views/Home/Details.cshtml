@model INFORNO_EF.Models.Pizze

@{
    ViewBag.Title = "Details";
}

<h1 class="text-center text-dark">@Model.Nome</h1>

<div class="card text-bg-dark">
    <img src="~/Content/Immagini/@Model.Foto" class="card-img" alt="pizza" style="height: 66vh">
    <div class="card-img-overlay">
        <div class="opacity-75 text-center p-4" style="background-color: #6c2f18b0">
            <h5 class="card-title mt-4"><strong>@Model.Nome</strong></h5>
            <p class="card-text"><strong>@Model.Ingredienti</strong></p>
            <p class="card-text"><strong>@Model.Prezzo€</strong></p>
            <p class="card-text"><strong>@Model.TempoConsegna</strong></p>
            <div class="form-group">
                @Html.ActionLink("Aggiungi al carrello", "Create", "Dettagli", new { id = Model.IdPizza }, new { @class = "btn btn-dark text-light fw-bold" })
            </div>
        </div>
    </div>
</div>