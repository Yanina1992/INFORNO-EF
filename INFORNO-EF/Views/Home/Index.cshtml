@model IEnumerable<INFORNO_EF.Models.Pizze>

@{
    ViewBag.Title = "Index";
}

<div class="text-light text-center d-flex flex-column justify-content-end mb-3" id="bg-forno">
    <h2 class="bg-titles">BENVENUTI alla Pizzeria In Forno</h2>
    <h4 class="bg-titles" id="description">
        Dove la passione per la perfezione è l'ingrediente segreto! Materie prime di alta qualità, lievitazione artigianale e amore per la tradizione,
        ogni pizza racconta una storia di gusto autentico.
    </h4>
</div>

    <div class="container">
        <div class="row">
            <h1 class="text-center p-3">Le nostre pizze</h1>
            @foreach (var item in Model)
            {
                <div class="col col-12 col-sm-6 col-md-4 card border-5 border-light" style="background: linear-gradient(90deg, rgba(131,58,180,1) 0%, rgba(253,29,29,1) 0%, rgba(252,176,69,1) 100%);">
                    <img src="~/Content/Immagini/@item.Foto" class="card-img-top h-75 p-2" alt="pizza">
                    <div class="card-body text-center">
                        <h5 class="card-title text-truncate">@item.Nome</h5>
                        <p class="card-text"><strong>@item.Prezzo €</strong></p>

                        <div style="width: 95%">
                            @if (User.IsInRole("admin"))
                            {
                                @Html.ActionLink("Dettagli", "Details", "Pizze", new { id = item.IdPizza }, new { @class = "btn btn-dark fw-bold w-100" })
                            }
                            else
                            {
                                @Html.ActionLink("Scopri di più", "Details", "Home", new { id = item.IdPizza }, new { @class = "btn btn-dark fw-bold w-100" })
                            }
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>