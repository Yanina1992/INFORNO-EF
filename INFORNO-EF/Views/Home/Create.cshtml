@model INFORNO_EF.Models.Ordini

@{
    ViewBag.Title = "Create";
}


<h1 class="text-center">Ordina le tue pizze</h1>
<div class="d-flex justify-content-center flex-column align-items-stretch">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group form-control">
                @Html.LabelFor(model => model.Data, htmlAttributes: new { @class = "control-label" })
                @Html.TextBox("Data")
                @Html.ValidationMessageFor(model => model.Data, "", new { @class = "text-danger" })
            </div>

            <div class="form-group form-control">
                @Html.LabelFor(model => model.IndirizzoSpedizione, htmlAttributes: new { @class = "control-label" })
                @Html.TextBox("IndirizzoSpedizione")
                @Html.ValidationMessageFor(model => model.IndirizzoSpedizione, "", new { @class = "text-danger" })
            </div>

            <div class="form-group form-control">
                @Html.LabelFor(model => model.Note, htmlAttributes: new { @class = "control-label" })
                @Html.TextBox("Note")
                @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
            </div>

            <div class="form-group form-control">
                @Html.LabelFor(model => model.Concluso, htmlAttributes: new { @class = "control-label" })
                @Html.CheckBox("Concluso")
                @Html.ValidationMessageFor(model => model.Concluso, "", new { @class = "text-danger" })
            </div>

            <div class="form-group form-control">
                @Html.Label("Inserisci il tuo username")
                @Html.TextBox("NomeCliente")
            </div>


            <div class="form-group form-control">
                @Html.Label("Inserisci la quantita")
                @Html.TextBox("quantita")
            </div>

            <div class="mt-4">
                <input type="submit" value="Salva" class="btn btn-primary" />
            </div>

        </div>
    }
    <a @Html.ActionLink("Prosegui ordine...", "Index", "Home", new { @class = "action-link" }) 
</div>
