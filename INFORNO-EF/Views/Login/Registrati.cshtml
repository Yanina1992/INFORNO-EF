﻿@model INFORNO_EF.Models.Utenti
@{
    ViewBag.Title = "Registrati";
}

<h1 class="text-center">Registrati</h1>
<div class="d-flex justify-content-center flex-column align-items-center" style="height: 63.2vh; background: rgb(131,58,180); background: linear-gradient(90deg, rgba(131,58,180,1) 0%, rgba(253,29,29,1) 0%, rgba(252,176,69,1) 100%)">


    @using (Html.BeginForm())
    {

        <div class="d-flex flex-column" style="width: 72vw">
            <h3 class="text-center">Inserisci i tuoi dati e registrati</h3>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group form-control text-center">
                @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label" })
                @Html.TextBox("Username")
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>

            <div class="form-group form-control text-center">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label" })
                @Html.TextBox("Password")
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>

            <div class="text-center">
                <input type="submit" value="Registrati" class="btn btn-dark m-2 fw-bold" />
            </div>

        </div>
    }
</div>
